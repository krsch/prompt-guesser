# EditorConfig â€” consistent formatting across editors
# https://editorconfig.org/

root = true

# Global defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 90

# Match Prettier
quote_type = double

# JSON and YAML (keep consistent indentation)
[*.{json,yml,yaml}]
indent_size = 2

# Markdown (same limits, no special overrides)
[*.md]
max_line_length = 90
trim_trailing_whitespace = true
