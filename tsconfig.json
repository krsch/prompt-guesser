{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    /* ---------- File Layout ---------- */
    "rootDir": "src",
    "outDir": "dist",

    /* ---------- Module & Target ---------- */
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",       // works with modern build tools (Vite, TS loaders)
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* ---------- Type Checking ---------- */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,              // disable for now; handled by ESLint
    "noUnusedParameters": false,          // same â€” tests and commands often use placeholders

    /* ---------- Source Maps & Declarations ---------- */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* ---------- Project Style ---------- */
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    /* ---------- Libraries ---------- */
    "lib": ["ES2020", "DOM"],

    /* ---------- Type Roots ---------- */
    "types": []
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "coverage"]
}
