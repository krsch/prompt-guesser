{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "../..",
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "baseUrl": ".",
    "rootDirs": ["src", "../../src"],
    "paths": {
      "@prompt-guesser/core/*": ["../../src/*"]
    },
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
